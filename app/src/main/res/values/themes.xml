<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#B00020</item>
        <item name="colorPrimaryVariant">#830018</item>
        <item name="colorOnPrimary">#FFFFFF</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">#FFC000</item>
        <item name="colorSecondaryVariant">#FFFFFF</item>
        <item name="colorOnSecondary">#C3000000</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="bottomNavigationStyle">?attr/colorPrimaryVariant</item>

        <item name="windowNoTitle">true</item>
        <item name="android:typeface">serif</item>
        <item name="android:textSize">16sp</item>

    </style>

    <style name="RatingBar">
        <item name="colorControlNormal">#7E7E7E</item>
        <item name="colorControlActivated">#FFEA00</item>
    </style>
</resources>